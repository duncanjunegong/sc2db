<% provide(:title, 'Create megas') %>
<h1>Create megas</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@mega) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :synstart %>
      <%= f.text_field :synstart, class: 'form-control' %>

      <%= f.label :synend %>
      <%= f.text_field :synend, class: 'form-control' %>

      <%= f.label :marker %>
      <%= f.select :marker, Mega.markers.collect { |p| p }, class: 'form-control' %>

      <%= f.label :introduction %>
      <%= f.text_field :introduction, placeholder: "Introduce it...", class: 'form-control' %>

      <%= f.label :latest? %>
      <%= f.text_field :latest_flag, class: 'form-control' %>

      <%= f.submit "Create new mega", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
